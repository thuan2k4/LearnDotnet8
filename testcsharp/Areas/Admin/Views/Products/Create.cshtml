@model ProductVM
<form method="post">
    <div class="border border-rounded p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Product</h2>
            <hr>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Tittle" class="form-lable"></label>
            <input asp-for="Product.Tittle" class="form-control">
            <span asp-validation-for="Product.Tittle" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Description" class="form-lable"></label>
            <input asp-for="Product.Description" class="form-control">
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ISBN" class="form-lable"></label>
            <input asp-for="Product.ISBN" class="form-control">
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Author" class="form-lable"></label>
            <input asp-for="Product.Author" class="form-control">
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ListPrice" class="form-lable"></label>
            <input asp-for="Product.ListPrice" class="form-control">
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Price" class="form-lable"></label>
            <input asp-for="Product.Price" class="form-control">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Price50" class="form-lable"></label>
            <input asp-for="Product.Price50" class="form-control">
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Price100" class="form-lable"></label>
            <input asp-for="Product.Price100" class="form-control">
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>

         @*Danh muc chon cac category tuong ung*@
         @*Text -> option, Value -> value*@
        <div class="mb-3">
            <label asp-for="Product.CategoryId" class="form-lable"></label>
            <select asp-for="Product.CategoryId" class="form-select" asp-items="@Model.CategoryList">
                <option disabled selected>
                    --Select Category--
                </option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-success form-control" style="width: 150px;">Create</button>
            </div>
            <div class="col-6">
                <a asp-controller="Products" asp-action="Index" class="btn btn-secondary" style="width: 150px;">Back
                    to Product</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}