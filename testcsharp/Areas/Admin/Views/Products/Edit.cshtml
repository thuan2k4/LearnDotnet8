@model Product
<form method="post">
    <div class="border border-rounded p-3 mt-4">
        <div class="row pb-2">
            <h2>Edit Product</h2>
            <hr>
        </div>
        <div class="mb-3">
            <label asp-for="Tittle" disable class="form-lable"></label>
            <input asp-for="Tittle" class="form-control">
            <span asp-validation-for="Tittle" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" disable class="form-lable"></label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ISBN" disable class="form-lable"></label>
            <input asp-for="ISBN" class="form-control">
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author" disable class="form-lable"></label>
            <input asp-for="Author" class="form-control">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ListPrice" disable class="form-lable"></label>
            <input asp-for="ListPrice" class="form-control">
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" disable class="form-lable"></label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price50" disable class="form-lable"></label>
            <input asp-for="Price50" class="form-control">
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price100" disable class="form-lable"></label>
            <input asp-for="Price100" class="form-control">
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-success form-control" style="width: 150px;">Update</button>
            </div>
            <div class="col-6">
                <a asp-controller="Products" asp-action="Index" class="btn btn-secondary" style="width: 150px;">Back
                    to Product</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}